{
    "hosting": {
      "public": "/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    "rewrites":[
        {
            "source":"**",
            "destination":"/index.html"
        }
    ],
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
      "predeploy": [
        "firebase login",
        "npm install",
        "npm build-- --mode dev"
      ]
    }
  }